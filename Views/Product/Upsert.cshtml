@model ProductVM

<form method="post" enctype="multipart/form-data">
    <input asp-for="Product.Id" hidden />
    <input asp-for="Product.ImageUrl" hidden />
    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-dark-emphasis"> @(Model.Product.Id != 0 ? "Update" : "Create") Product</h2>
                    <hr />
                </div>
                <div class="mb-3">
                    <label asp-for=Product.Title></label>
                    <input asp-for=Product.Title type="text" class="form-control" />
                    <span asp-validation-for="Product.Title" class="text-danger"></span>
                </div>
                <div class="form-group pb-4">
                    <label asp-for=Product.Author></label>
                    <input asp-for=Product.Author class="form-control" rows="3"></input>
                    <span asp-validation-for="Product.Author" class="text-danger"></span>
                </div>
                <div class="form-group pb-4">
                    <label asp-for=Product.Description></label>
                    <textarea asp-for=Product.Description class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>
                <div class="form-group pb-4">
                    <label asp-for=Product.ISBN></label>
                    <input asp-for=Product.ISBN class="form-control" rows="3"></input>
                    <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                </div>
                <div class="form-group pb-4">
                    <label asp-for=Product.ListPrice></label>
                    <input asp-for=Product.ListPrice class="form-control" rows="3"></input>
                    <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                </div>
                <div class="form-group pb-4">
                    <label asp-for=Product.Price></label>
                    <input asp-for=Product.Price class="form-control" rows="3"></input>
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <div class="form-group pb-4">
                    <label asp-for=Product.Price50></label>
                    <input asp-for=Product.Price50 class="form-control" rows="3"></input>
                    <span asp-validation-for="Product.Price50" class="text-danger"></span>
                </div>
                <div class="form-group pb-4">
                    <label asp-for=Product.Price100></label>
                    <input asp-for=Product.Price100 class="form-control" rows="3"></input>
                    <span asp-validation-for="Product.Price100" class="text-danger"></span>
                </div>
                <div class="form-group pb-4">
                    <label asp-for=Product.CategoryId></label>
                    <select asp-for=Product.CategoryId asp-items=@Model.CategoryList class="form-select" rows="3">
                        <option disabled selected>Select Category</option>
                    </select>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group pb-4">
                    <label asp-for=Product.ImageUrl></label>
                    <input type="file" name="file" asp-for=Product.ImageUrl value="/@Model.Product.ImageUrl" class="form-control" rows="3"></input>
                </div>
                <div class="row">
                    <div class="col-6">
                        @if (Model.Product.Id != 0)
                        {
                            <button type="submit" class="btn btn-outline-dark form-control">Update Product</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-outline-dark form-control">Create Product</button>
                        }
                    </div>
                    <div class="col-6">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">Back To List</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-2">
            <img src="/@Model.Product.ImageUrl" width="150%" style="border-radius:5px; border:1px solid #bbb9b9"/>
        </div>
    </div>

</form>

@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons lists visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | align lineheight | tinycomments | checklist numlist bullist indent outdent ',
            tinycomments_mode: 'embedded',
            tinycomments_author: 'Author name',
            mergetags_list: [
                { value: 'First.Name', title: 'First Name' },
                { value: 'Email', title: 'Email' },
            ],
            ai_request: (request, respondWith) => respondWith.string(() => Promise.reject("See docs to implement AI Assistant")),
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
