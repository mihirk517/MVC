@model Product

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-dark-emphasis">Delete Product</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for=Title></label>
            <input asp-for=Title type="text" disabled class="form-control" />    
        </div>
        <div class="form-group pb-4">
            <label asp-for=Author></label>
            <textarea asp-for=Author disabled class="form-control" rows="3"></textarea>
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="form-group pb-4">
            <label asp-for=Description></label>
            <textarea asp-for=Description disabled class="form-control" rows="3"></textarea>            
        </div>
        <div class="form-group pb-4">
            <label asp-for=ISBN></label>
            <textarea asp-for=ISBN disabled class="form-control" rows="3"></textarea>
        </div>
        <div class="form-group pb-4">
            <label asp-for=ListPrice></label>
            <textarea asp-for=ListPrice disabled class="form-control" rows="3"></textarea>
        </div>
        <div class="form-group pb-4">
            <label asp-for=Price></label>
            <textarea asp-for=Price disabled class="form-control" rows="3"></textarea>
        </div>
        <div class="form-group pb-4">
            <label asp-for=Price50></label>
            <textarea asp-for=Price50 disabled class="form-control" rows="3"></textarea>
            
        </div>
        <div class="form-group pb-4">
            <label asp-for=Price100></label>
            <textarea asp-for=Price100 disabled class="form-control" rows="3"></textarea>
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-outline-dark form-control">Delete Product</button>
            </div>
            <div class="col-6">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">Back To List</a>
            </div>
        </div>
    </div>
</form>

