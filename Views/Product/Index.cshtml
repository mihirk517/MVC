@model List<Product>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-dark">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-outline-dark">
                <i class="bi bi-plus-circle"></i> Create New Product
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th scope="row">Title</th>
                <th scope="row">ISBN</th>
                <th scope="row">Price</th>
                <th scope="row">Author</th>
                <th scope="row">Category</th>
                <th></th>
            </tr>
        </thead>        
        <tbody>
            @foreach (var data in Model)
            {
                <tr>
                    <td scope="row">
                        @data.Title
                    </td>
                    <td scope="row">
                        @data.ISBN
                    </td>
                    <td scope="row">
                        @data.ListPrice
                    </td>
                    <td scope="row">
                        @data.Author
                    </td>
                    <td scope="row">
                        @data.Category.Name
                    </td>
                    <td width="40%">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Upsert" asp-route-id="@data.Id" class="btn btn-primary">
                                <i class="bi bi-pencil-square">Edit</i>
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@data.Id" class="btn btn-outline-dark">
                                <i class="bi bi-trash">Delete</i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>