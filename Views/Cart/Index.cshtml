@model ShoppingCartVM
<form method="post">
    <br />
    <div class="card border-0">
        <div class="card-header bg-dark bg-gradient text-light py-4">
            <div class="row px-4">
                <div class="col-12 text-center">
                    <h5 class="pt-2 text-white text-uppercase">
                        Shopping Cart
                    </h5>
                </div>
            </div>
        </div>
        <div class="card-body my-4">
            <div class="row">
            <div class="row mb-3 pb-3">
                <div class="col-md-2">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-outline-dark text-uppercase mb-5 w-auto btn-sm"><small>Continue Shopping</small></a>
                </div>
                @foreach (var item in Model.shoppingCartList)
                {
                    <div class="col-md-10 offset-md-1">
                        <div class="row border-bottom pb-3">
                            <div class="d-none d-lg-block col-lg-1 text-center py-2">
                                <img src="@item.Product.ImageUrl" class="card-img-top rounded w-100" />
                            </div>
                            <div class="col-12 col-lg-6 pt-md-3">
                                <h5 class="text-uppercase"><strong>@item.Product.Title</strong></h5>
                                <p><small>@Html.Raw(@item.Product.Description)</small></p>
                            </div>
                            <div class="col-12 col-lg-5 text-center row">
                                <div class="col-3 text-md-right pt-2 pt-md-4">
                                    <h6 class="fw-semibold">
                                        @item.Price.ToString("c")
                                        <span class="text-muted">&nbsp;x&nbsp;</span>@item.Count
                                    </h6>
                                </div>
                                <div class="col-6 col-sm-4 col-lg-6 pt-2">
                                    <div class="w-75 btn-group" role="group">
                                        <a asp-action="Plus" asp-route-cartId="@item.Id" class="btn btn-outline bg-gradient py-2">
                                            <i class="bi bi-plus-square"></i>
                                        </a> &nbsp;
                                        <a asp-action="Minus" asp-route-cartId="@item.Id" class="btn btn-outline-dark bg-gradient py-2">
                                            <i class="bi bi-dash-square"></i>
                                        </a>
                                    </div>

                                </div>
                                <div class="col-3 col-sm-4 col-lg-2 offset-lg-1 text-right pt-2">
                                    <a asp-action="remove" asp-route-cartId="@item.Id" a class="btn btn-outline-danger bg-gradient py-2 ">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
        <div class="card-footer border-0">
            <div class="row">
                <div class="col-md-12 offset-md-0">
                    <ul class="list-group mb-4">
                        <li class="d-flex justify-content-between align-items-center">
                            <h5 class="text-dark fw-semibold text-uppercase"> Total </h5>
                            <h4 class="text-dark fw-bolder">@Model.orderHeader.OrderTotal €</h4>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 offset-md-5 ">
                    <a asp-area="" asp-controller="Cart" asp-action="Summary" class="btn btn-outline-dark border-0 bg-gradient w-auto py-2">Summary</a>
                </div>
            </div>
        </div>
    </div>

    </div>
</form>

