@model Category

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-dark-emphasis">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for=Name></label>
            <input asp-for=Name type="text" disabled class="form-control" />
            
        </div>
        <div class="form-group pb-4">
            <label asp-for=Description></label>
            <textarea asp-for=Description disabled class="form-control" rows="3"></textarea>
            
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-outline-dark form-control">Delete Category</button>
            </div>
            <div class="col-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back To List</a>
            </div>
        </div>
    </div>
</form>

